{% extends 'layout.html.twig' %}

{% block body %}
  <div class="row">
    
    <!-- Nav tabs -->
    <ul class="nav nav-tabs" role="tablist">
      <li role="presentation" class="active"><a href="#possible_coursies" aria-controls="possible_coursies" role="tab" data-toggle="tab">{{ 'list.available'|trans({}, 'messages') }}</a></li>
      <li role="presentation"><a href="#my_coursies" aria-controls="my_coursies" role="tab" data-toggle="tab">{{ 'list.my'|trans({}, 'messages') }}</a></li>
    </ul>

    <!-- Tab panes -->
    <div class="tab-content">
        <div role="tabpanel" class="tab-pane active" id="possible_coursies">
            <div class="container">
                {% include 'parts/courses_list.html.twig' with {trainings: available_trainings} %}
            </div>
        </div>
        <div role="tabpanel" class="tab-pane" id="my_coursies">
            <div class="container">
                {% if app.user %}
                    {% include 'parts/courses_list.html.twig' with {trainings: user_trainings} %}
                {% else %}
                    <p class="row notlogged">
                        {{ 'security.must_login'|trans({}, 'messages') }}
                    </p>
                {% endif %}
            </div>
        </div>        
    </div>   
  
  </div>
    
{% endblock %}
